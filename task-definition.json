{
  "family": "ecs-sample-app",
  "networkMode": "awsvpc",
  "requiresCompatibilities": ["FARGATE"],
  "cpu": "256",
  "memory": "512",
  "executionRoleArn": "arn:aws:iam::123456789012:role/ecsTaskExecutionRole",
  "taskRoleArn": "arn:aws:iam::123456789012:role/ecs-task-role",
  "containerDefinitions": [
    {
      "name": "ecs-sample-app",
      "image": "123456789012.dkr.ecr.us-east-1.amazonaws.com/ecs-sample-app:latest",
      "essential": true,
      "portMappings": [
        {
          "containerPort": 8080,
          "protocol": "tcp"
        }
      ],
      "environment": [
        {
          "name": "ECS_CONTAINER_METADATA_URI",
          "value": "http://169.254.170.2/v4/metadata"
        },
        {
          "name": "ECS_TASK_METADATA_URI",
          "value": "http://169.254.170.2/v4/metadata"
        },
        {
          "name": "ECS_TASK_ROLE",
          "value": "arn:aws:iam::123456789012:role/ecs-task-role"
        },
        {
          "name": "DD_AGENT_HOST",
          "value": "169.254.170.2"
        },
        {
          "name": "DD_ECS_COLLECT",
          "value": "true"
        }
      ],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/ecs-sample-app",
          "awslogs-region": "us-east-1",
          "awslogs-stream-prefix": "ecs"
        }
      },
      "healthCheck": {
        "command": [
          "CMD-SHELL",
          "curl -f http://localhost:8080/status || exit 1"
        ],
        "interval": 30,
        "timeout": 5,
        "retries": 3
      }
    }
  ]
}

